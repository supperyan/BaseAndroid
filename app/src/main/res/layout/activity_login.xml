<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="593px"
        android:layout_height="87px"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_account_image"
            android:layout_width="26px"
            android:layout_height="40px"
            android:layout_gravity="center"
            android:layout_marginLeft="39px"
            android:layout_marginRight="38px"
            android:src="@drawable/phone" />

        <EditText
            android:id="@+id/login_account"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:text=""
            android:textColorHint="#cccccc"
            android:textSize="32px" />
    </LinearLayout>

    <View
        android:id="@+id/login_account_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="79px"
        android:layout_marginRight="78px"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="593px"
        android:layout_height="87px"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_password_image"
            android:layout_width="26px"
            android:layout_height="40px"
            android:layout_gravity="center"
            android:layout_marginLeft="39px"
            android:layout_marginRight="38px"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:text=""
            android:textColorHint="#cccccc"
            android:textSize="32px" />
    </LinearLayout>

    <View
        android:id="@+id/login_password_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="79px"
        android:layout_marginRight="78px"
        android:background="#d9d9d9" />

    <Button
        android:id="@+id/login_login"
        android:layout_width="669px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="60px"
        android:background="@drawable/shape_button_comment"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="34px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="忘记密码？"
            android:textColor="#999999"
            android:textSize="30px" />

        <TextView
            android:id="@+id/login_regist_now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50px"
            android:gravity="center"
            android:text="现在"
            android:textColor="#999999"
            android:textSize="30px" />

        <TextView
            android:id="@+id/login_regist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="注册"
            android:textColor="#5d9bf8"
            android:textSize="30px" />
    </LinearLayout>
</LinearLayout>